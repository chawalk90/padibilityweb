                <span id="unisex"><%= radio_button_tag(:coed, "Yes") %> Yes 
                    <%= radio_button_tag(:coed, "No") %> No </span></p>
            </div> 

            <div class="holder">
                <div>
                    <p><%= f.label :age, "How old are you?" %>
                        <span class="mature"><%=f.text_field :age %></span></p>
                </div>
            </div>

                
            <div class"holder">
                <div class="housing_both">
                    <p><span id="label"><%= f.label :max_rent, "Monthly Price of Rent (per Person):" %></span>
                        <span id="monthly"><%= f.text_field :max_rent, "size" => 10 %></span></p>
                        <!--change max rent to rent-->
                </div>
            </div> <!-- End of holder -->
            
            <div class="holder">
                <p><%= f.label :move_in, "Move in date:" %><%= f.text_field :move_in, "size" => 10 %>
