                    <div class="button-holder">
                        <table>
                            <tr>
                        <td><%= check_box_tag(:amenities) %><%= label_tag(:amenities, "Balcony") %></td>
                        <td><%= check_box_tag(:amenities) %><%= label_tag(:amenities, "Dishwasher") %></td>
