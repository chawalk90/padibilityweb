                        <td><%= check_box_tag(:amenities) %><%= label_tag(:amenities, "In-Unit Laundry") %></td>
                        <td><%= check_box_tag(:amenities) %><%= label_tag(:amenities, "Laundry Room") %></td>
                        <td><%= check_box_tag(:amenities) %><%= label_tag(:amenities, "Outdoor Space") %></td>
                        <td><%= check_box_tag(:amenities) %><%= label_tag(:amenities, "Parking") %></td>
                        <td><%= check_box_tag(:amenities) %><%= label_tag(:amenities, "Terrace") %></td>
                    </tr>
                    </table>
