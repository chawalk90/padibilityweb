                </div>
            </div>

            <div class="holder">
                 <div>
                    <p><span id="label">Are pets allowed in your pad?</span></p>
                    <div class="button-holder">
                        <!--insert radio button pet answers here-->
                    </div>
                </div>
            </div> 

            <div>
                <span id="label"><%= f.label :address, "What is the address of your pad?" %></span>
                <%= f.text_field :address %>
            </div>

            <div class="housing_only">
                <span class="terms_error">Please read the <a href="/terms" target="_blank">Terms & Conditions</a></span>
                <%= check_box_tag(:terms) %>
                <%= label_tag(:terms, "I have read the Terms & Conditions") %>
            </div>
            
