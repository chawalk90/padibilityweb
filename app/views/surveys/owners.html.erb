                <%= f.text_field :age_min %>
                <%= f.label :age_max, "Age Max." %>
                <%= f.text_field :age_max %>
                <p><%= f.label :age_mode, "What is the age mode (the most common age) of the residents in your building?" %>
                <%= f.text_field :age_mode %></p>
            </div>

            <div class="holder">
