<div id="wrapper">
    <div id="questionnaire">            
        <%= form_for Survey.new do |f| %>
        <div id="form_one_page" class="font one page link">
        <form action="/form_db_1" method="post" name="quiz" id="quiz">
                <h3 class="title">Owners' Questionnaire</h3>
                <div class="schoolemail">
                    <p><%= f.label :email, "Your school email address:" %>
                    <span id="send"><%= f.text_field :email, "size" => 57 %></span></p>
                    <p><%= f.label :first_name, 'Your name:' %> 
                    <span id="writename"><%= f.text_field :first_name, "size" => 25 %>   <%= f.text_field :last_name, "size" => 25 %></span></p>
                </div>
                <div class="holder">
                    <div>
                        <p><%= f.label :housing_type, "Type of housing:" %>
                        <span id="type"><%= radio_button_tag(:housing_type, "Apartment") %> Apartment 
                        <%= radio_button_tag(:housing_type, "House") %> House 
                        <%= radio_button_tag(:housing_type, "Other (Please specify") %> Other <%= f.text_field :housing_type %></span>
                        </p>
                        <p><%= f.label :realty, "What company do you represent?" %>
                        <span id="realty"><%= f.text_field :realty %></span>
                        <div class="button-holder">
                            <%= f.label :availability, "Availability:" %>
                            <span id="available"><%= radio_button_tag(:availability, "Only a room") %> Only a room
                            <%= radio_button_tag(:availability, "The whole pad") %> The whole pad </span>
                        </div></p>
                    </div>
                </div>
            <div class="holder">
                 <div>
                    <%= f.label :hometown, "Where are you located? (We will be expanding to more cities in the coming weeks!)" %>
