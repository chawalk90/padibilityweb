                        <table class="cityoptions">
                            <tbody>
                                <tr>
                                    <td><%= radio_button_tag(:hometown, "New York City") %> New York City </td>
                                    <td><%= radio_button_tag(:hometown, "Boston") %> Boston 
                                    </td>
                                    <td><%= radio_button_tag(:hometown, "Washington, D.C.") %> Washington, D.C. </td>
                                    <td><%= radio_button_tag(:hometown, "San Francisco") %> San Francisco </td>
                                </tr>
                                <tr>
                                    <td><%= radio_button_tag(:hometown, "Chicago") %> Chicago </td>
                                    <td><%= radio_button_tag(:hometown, "Los Angeles") %> Los Angeles </td>
                                    <td id="other" colspan="2"><%= radio_button_tag(:hometown, "Other") %> Other 
                        <%= f.text_field :hometown, "size" => 45 %></td>
                    </tr>
                </tbody>
            </table>
                        </div>
                    </div>
                </div>
