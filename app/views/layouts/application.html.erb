	<!DOCTYPE html>
	<html>
	<head>
	  <title>Padibilityweb</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<header class="navbar-fixed-top">
		<link rel="stylesheet" href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap.min.css">
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
		<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
		<span class="menu-trigger">MENU</span>
		<div class="nav">
		<ul class="clearfix"><li class="glow-active" id="house"><%= link_to "#{image_tag("home.png")}".html_safe, root_path %></li>
		<span id="rightfloat"><li class="glow"><%= link_to ("<span>How it Works</span>").html_safe, howitworks_path %></li>
			<li class="glow"><%= link_to ("<span>The Team</span>").html_safe, team_path %></li>
			<li class="glow"><%= link_to ("<span>Contact Us</span>").html_safe %></li>
				<% if user_signed_in? %>
				<div class="btn-group">
    				<button type="button" id="userctrl" class="btn btn-default dropdown-toggle" data-toggle="dropdown"><%= current_user.email%><%= image_tag current_user.avatar.url(:thumb) %>
      				<span class="caret"></span>
    				</button>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
      <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
      <li><%= link_to ("<span>I'm All Set!</span>").html_safe, "#" %></li>
    </ul>
  </div>
				<% else %>
					<li class="glow"><%= link_to 'Sign In', new_user_session_path %></li>
				<li class="glow">
					<%= link_to ("<span>Sign Up</span>").html_safe, new_user_registration_path %>
				</li>
				<li class="glow" id="username"> </li>
				<% end %>
		</ul>

	</div>
	</header>
	<body>

	<%= yield %>

	<footer class="footer"><div id="copyright">Copyright Padibility 2014 <span class="pad_contact">Contact us: <a href="info@padibility.com">info@padibility.com</a></span></div>
		</footer>
	</body>
	</html>
